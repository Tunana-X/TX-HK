<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/button_background_shape"/>  <!-- 按下时的颜色 -->
    <!-- 按钮获得焦点时的颜色 -->
    <item android:state_focused="true" android:drawable="@drawable/button_background_shape"/>  <!-- 焦点时的颜色 -->
    <!-- 按钮可用时的颜色 -->
    <item android:state_enabled="true" android:drawable="@drawable/button_background_shape"/>  <!-- 默认颜色 -->
    <!-- 按钮禁用时的颜色 -->
    <item android:state_enabled="false" android:drawable="@drawable/button_background_shape"/> <!-- 禁用时的颜色 -->
</selector>